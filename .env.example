# Sentry DSN for error monitoring
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# JWT signing secret (minimum 32 characters)
JWT_SECRET=replace-with-a-secure-secret-min-32-chars

# PostgreSQL settings for Docker
POSTGRES_DB=advanceddevsample
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Frontend API endpoint embedded at Docker build time
FRONTEND_API_BASE_URL=http://localhost:5069

# Required for admin seeding in development
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-now

# Optional OpenTelemetry collector endpoint
# Example: http://localhost:4317
OTEL_EXPORTER_OTLP_ENDPOINT=
