@inherits LayoutComponentBase
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end">
            <AuthorizeView>
                <Authorized>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="LogoutAsync">Sign out</button>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-sm btn-primary" href="account/login">Sign in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4 pb-5">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}
