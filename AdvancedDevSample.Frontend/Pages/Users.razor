@page "/users"
@attribute [Authorize(Roles = "Admin")]
@inject ApiClient ApiClient

<PageTitle>Users</PageTitle>

<h1>Users (Admin)</h1>

@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="alert alert-danger">@_errorMessage</div>
}

@if (_loading)
{
    <p><em>Loading users...</em></p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in _users.Items)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@(user.IsActive ? "Yes" : "No")</td>
                    <td>
                        <div class="d-flex gap-1">
                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => UpdateRoleAsync(user, GetAlternateRole(user.Role)))">
                                Set @GetAlternateRole(user.Role)
                            </button>
                            @if (user.IsActive)
                            {
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeactivateAsync(user.Id)">Deactivate</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex gap-2 align-items-center">
        <button class="btn btn-outline-secondary btn-sm" disabled="@(!_users.HasPreviousPage)" @onclick="PreviousPageAsync">Previous</button>
        <span>Page @_users.Page / @_users.TotalPages</span>
        <button class="btn btn-outline-secondary btn-sm" disabled="@(!_users.HasNextPage)" @onclick="NextPageAsync">Next</button>
    </div>
}

@code {
    private PagedResult<UserResponse> _users = new(Array.Empty<UserResponse>(), 0, 1, 20);
    private int _page = 1;
    private const int PageSize = 20;
    private bool _loading = true;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _loading = true;
        _errorMessage = null;

        try
        {
            _users = await ApiClient.GetUsersAsync(_page, PageSize);
        }
        catch (ApiException ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task UpdateRoleAsync(UserResponse user, string role)
    {
        try
        {
            await ApiClient.UpdateUserRoleAsync(user.Id, new UpdateUserRoleRequest(role));
            await LoadAsync();
        }
        catch (ApiException ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task DeactivateAsync(Guid userId)
    {
        try
        {
            await ApiClient.DeactivateUserAsync(userId);
            await LoadAsync();
        }
        catch (ApiException ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task PreviousPageAsync()
    {
        if (_page <= 1)
        {
            return;
        }

        _page--;
        await LoadAsync();
    }

    private async Task NextPageAsync()
    {
        if (!_users.HasNextPage)
        {
            return;
        }

        _page++;
        await LoadAsync();
    }

    private static string GetAlternateRole(string currentRole)
    {
        return string.Equals(currentRole, "Admin", StringComparison.OrdinalIgnoreCase) ? "User" : "Admin";
    }
}
